{
  "name": "submission-service",
  "version": "0.3.0",
  "description": "Data Submission for VirusSeq",
  "main": "dist/index.js",
  "scripts": {
    "\n==================  Build  ==================": "",
    "build:compile": "rimraf dist && tsc",
    "build:copy:api-docs": "copyfiles src/api-docs/*.yml src/api-docs/**/*.yml dist/",
    "build:copy:db": "copyfiles \"migrations/**/*\" dist/",
    "build:all": "pnpm build:compile && pnpm build:copy:api-docs && pnpm db:generate && pnpm build:copy:db",
    "\n=============  Dev environment  =============": "",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "db:studio": "NODE_OPTIONS='--import tsx' drizzle-kit studio --config=drizzle.config.ts",
    "db:generate": "NODE_OPTIONS='--import tsx' drizzle-kit generate --config=drizzle.config.ts",
    "migrate:db:dev": "tsx src/scripts/provider-migration.ts && tsx src/scripts/custom-migration.ts",
    "start:dev": "pnpm migrate:db:dev && tsx watch --clear-screen=false src/index.ts | pino-pretty",
    "\n========  Prod environment (compiled) =======": "",
    "migrate:db:prod:custom": "node --import=./register.js src/scripts/custom-migration",
    "migrate:db:prod:provider": "node --import=./register.js src/scripts/provider-migration",
    "migrate:db:prod": "pnpm run migrate:db:prod:custom && pnpm run migrate:db:prod:provider",
    "start:prod": "pnpm migrate:db:prod && NODE_ENV=production node --import=./register.js src/index.js"
  },
  "private": true,
  "keywords": [],
  "author": "Ontario Institure for Cancer Research",
  "license": "GPL-3.0",
  "type": "module",
  "dependencies": {
    "@overture-stack/lyric": "^0.13.0",
    "bytes": "^3.1.2",
    "cors": "^2.8.5",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.4.5",
    "drizzle-orm": "^0.44.2",
    "esm-module-alias": "^2.2.1",
    "express": "^4.21.0",
    "firstline": "^2.0.2",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "multer": "1.4.5-lts.1",
    "pg": "^8.16.3",
    "pino": "^9.14.0",
    "pino-http": "^10.5.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bytes": "^3.1.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/express-serve-static-core": "4.19.5",
    "@types/firstline": "^2.0.4",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/multer": "^1.4.12",
    "@types/pg": "^8.15.4",
    "@types/qs": "^6.9.18",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "copyfiles": "^2.4.1",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.12.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "pino-pretty": "^11.3.0",
    "rimraf": "^6.0.1",
    "tsx": "^4.19.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "aliases": {
    "@": "src"
  }
}
